{
  "name": "ecc2cursor",
  "version": "0.0.1",
  "description": "Sync Everything Claude Code configs into Cursor (skills, agents, commands, MCP)",
  "type": "module",
  "license": "MIT",
  "bin": {
    "ecc2cursor": "dist/cli.mjs"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "keywords": [
    "cursor",
    "claude",
    "claude-code",
    "everything-claude-code",
    "ecc",
    "cursor-skills",
    "cursor-agents",
    "mcp",
    "cli"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "sync": "node dist/cli.mjs sync",
    "status": "node dist/cli.mjs status",
    "clean": "node dist/cli.mjs clean",
    "dry-run": "node dist/cli.mjs sync --dry-run"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^22",
    "tsdown": "^0.20",
    "typescript": "^5"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0"
  }
}
